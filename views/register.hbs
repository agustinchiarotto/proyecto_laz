{{>header}}
    <div class="register-form">
        <div class="row">
            <div  class="col_form_reg">
                <h1>Registrate</h1>
                <form action="/register" method="post" >
                    <fieldset id="account">
                        <legend>Tus datos Personales</legend>
                        <div class="form-group custom-field" id="custom-field3" style="display: block" autofocus>
                            <label for="user" class="col-sm-2 control-label">Usuario</label>
                            <div class="col-sm-10">
                                <input type="text" name="user" value placeholder="Usuario" id="input-custom-field3" class="form-control" required>
                            </div>
                        </div>
                    <div class="form-group" >
                    <label for="name" class="col-sm-4 control-label">
                        Nombre completo
                    </label>
                <div class="col-sm-10">
                    <input type="text" name="name" value placeholder="Nombre y apellido" id="name" class="form-control" required>
                </div>
                    </div>
                    <div class="form-group">
                        <label for="pass" class="col-sm-4 control-label">
                            Contraseña
                        </label>
                        <div class="col-sm-10">
                            <input type="password" name="pass" value placeholder="Contraseña" id="pass" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mail" class="col-sm-2 control-label">
                            E-Mail
                        </label>
                        <div class="col-sm-10">
                            <input type="email" name="mail" value placeholder="E-Mail" id="mail" class="form-control" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-sm-2 control-label">
                            Telefono
                        </label>
                    <div class="col-sm-10">
                        <input type="phone" name="phone" value placeholder="Telefono" id="phone" class="form-control" required>
                </div>
            </div>
                    </fieldset>
                    <fieldset id="direccion">
                        <legend>Su direccion</legend>
                        <div class="form-group">
                            <label for="col-sm-2 control-label" for="addres">
                                Direccion
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="addres" value placeholder="Direccion" id="addres" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="city" class="col-sm-2 control-label">
                                Ciudad
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="city" value placeholder="Ciudad" id="city" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="country" class="col-sm-2 control-label">
                                Pais
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="country" value placeholder="Pais" id="country" class="form-control" required>
                            </div>
                        </div>
                    </fieldset>
                    <a href="/" class="btn-cancel" >Cancelar</a>
                    <input type="submit" class="btn-save" value="Save">
        </div>
        </div>    
    </div>  

{{>footer}}